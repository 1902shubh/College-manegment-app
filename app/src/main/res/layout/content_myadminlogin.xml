<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".myadminlogin"
    tools:showIn="@layout/app_bar_myadminlogin">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:onClick="addpost"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:onClick="addpost"


            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:onClick="addpost"
                android:layout_marginLeft="20dp"
                android:layout_marginVertical="10dp"
                android:src="@drawable/addnotce"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Add new Post"
                android:onClick="addpost"
                android:textSize="20dp"
                android:layout_marginVertical="30dp"
                android:layout_marginHorizontal="30dp"
                android:textStyle="bold"

                />



        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:onClick="Updatepost"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:onClick="Updatepost"



            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:onClick="Updatepost"
                android:layout_marginLeft="20dp"
                android:layout_marginVertical="10dp"
                android:src="@drawable/updateic"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Delete or Update Post"
                android:onClick="Updatepost"
                android:textSize="20dp"
                android:layout_marginVertical="30dp"
                android:layout_marginHorizontal="30dp"
                android:textStyle="bold"

                />



        </LinearLayout>
    </androidx.cardview.widget.CardView>






    <androidx.cardview.widget.CardView
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:cardElevation="6dp"
        android:onClick="Addfaculity"
        app:cardCornerRadius="12dp"
        android:layout_margin="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:onClick="Addfaculity"

            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginVertical="10dp"
                android:onClick="Addfaculity"
                android:src="@drawable/faculity"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Add Facility"
                android:textSize="20dp"
                android:layout_marginVertical="30dp"
                android:onClick="Addfaculity"
                android:layout_marginHorizontal="30dp"
                android:textStyle="bold"

                />



        </LinearLayout>






    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:layout_columnWeight="1"

        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:onClick="ChangeF"



            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginVertical="10dp"
                android:src="@drawable/newfeed"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Change Faculty"

                android:textSize="20dp"
                android:layout_marginVertical="30dp"
                android:layout_marginHorizontal="30dp"
                android:textStyle="bold"

                />



        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:layout_columnWeight="1"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:onClick="Uploadpdf"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginVertical="10dp"
                android:src="@drawable/uploadimg"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Upload Pdf"
                android:textSize="20dp"
                android:layout_marginVertical="30dp"
                android:layout_marginHorizontal="30dp"
                android:textStyle="bold"

                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:layout_columnWeight="1"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:onClick="addtest"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginVertical="10dp"
                android:src="@drawable/testicon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Add a new Test"
                android:textSize="20dp"
                android:layout_marginVertical="30dp"
                android:layout_marginHorizontal="30dp"
                android:textStyle="bold"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
</LinearLayout>
